@model Project.ViewModels.FarmerProductsVM
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/displayProducts.css">
    <title>Lista de Productos</title>
</head>
<body>
    <div id="MainWrapper">
        <div id="WrapperScreen" >
    @foreach (var item in Model.prodList)
    {
        <h5>@item.Name</h5>
        <p>Cantidad disponible: @item.Stock</p>
        <p>@item.Description</p>
        <img src="@("~/image/"+item.ImageName)" asp-append-version="true" width="250px" height="250px"/>
        <a asp-controller="Farmer" asp-action="EditProduct" asp-route-id=@item.ID>Editar</a>
        <a asp-controller="Farmer" asp-action="DeleteProduct" asp-route-id=@item.ID>Eliminar</a>
    } 
    <a asp-controller="Farmer" asp-action="Menu" asp-route-id=@Model.farmerID>Volver al men√∫</a>
    <div>
    </div>
</body>
</html>

